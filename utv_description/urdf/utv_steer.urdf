    </joint>
  </transmission>

<!--Back Left Wheel Description-->
  <link name="blw">
    <visual>
      <origin xyz="1 -.62 -.29" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://utv_description/meshes/UTV_BLW.stl"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
      <geometry>
