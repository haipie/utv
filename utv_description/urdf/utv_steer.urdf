  </joint>

  <gazebo reference="blw">
    <mu1 value="200.0"/>
    <mu2 value="100.0"/>
    <kp value="10000000.0" />
    <kd value="1.0" />
    <material>Gazebo/Black</material>
  </gazebo>

 <transmission name="$blw_trans">
