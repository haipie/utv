<?xml version="1.0"?>
<robot name="UTV" xmlns:xacro="http://ros.org/wiki.xacro">

<xacro:property name="mass" value="1000" />
<!--<xacro:property name="wmass" value="20" />-->
<xacro:property name="wheeldiam" value=".584" />
<xacro:property name="bodylen" value="2.87" />
<xacro:property name="bodywidth" value="1.4" />
<xacro:property name="bodyheight" value="1.79" />
<xacro:property name="wheelthick" value=".225" />

<!--xacro:macro name="wheel" params="prefix sufix reflect">

  <link name="${prefix}_${suffix}_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"
      geometry
-->

  <material name="orange">
    <color rgba="${255/255} ${108/255} ${10/255} 1.0"/>
  </material>

  <material name="black">
    <color rgba="${0/255} ${0/255} ${0/255} 1.0"/>
  </material>

  <link name="base_link">
    <visual>
      <origin xyz= "0 0 .3522" rpy="0 0 0"/>
      <geometry>
        <mesh scale="0.001 0.001 0.001" filename="package://utv_description/meshes/UTV_frame.stl"/>
      </geometry>
      <material name="orange"/>
    </visual>
    <collision>
      <origin xyz= ".475 0 ${bodyheight/4}" rpy="0 0 0"/>
      <geometry>
        <box size="${bodylen} ${bodywidth} ${bodyheight/2}"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="${mass}"/>
      <inertia ixx="${mass/12*(bodyheight**2+bodylen**2)}" ixy="0.0" ixz="0.0" iyy="${mass/12*(bodywidth**2+bodylen**2)}" iyz="0.0" izz="${mass/12*(bodywidth**2+bodyheight**2)}"/>
    </inertial>
  </link>

  <link name="flw">
    <visual>
      <origin xyz=".6078 .6237 0.0601" rpy="0 0 0"/>
      <geometry>
        <mesh scale="0.001 0.001 0.001" filename="package://utv_description/meshes/UTV_FLW.stl"/>
      </geometry>
      <material name="black"/>
    </visual>
    <inertial>
      <mass value="10"/>
      <inertia ixx="${mass/12*(3*(wheeldiam/2)**2+wheelthick**2)}" ixy="0.0" ixz="0.0" iyy="${mass/12*(3*(wheeldiam/2)**2+wheelthick**2)}" iyz="0.0" izz="${mass/2*wheeldiam/2}"/>
    </inertial>
  </link>

  <joint name="base_to_flw" type="continuous">
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="flw"/>
    <origin xyz="-.6078 -.6237 .2919" rpy="0 0 0"/>
  </joint>

  <link name="frw">
    <visual>
      <origin xyz=".6078 -.6237 .0601" rpy="0 0 0"/>
      <geometry>
        <mesh scale="0.001 0.001 0.001" filename="package://utv_description/meshes/UTV_FRW.stl"/>
      </geometry>
      <material name="black"/>
    </visual>
    <inertial>
      <mass value="10"/>
      <inertia ixx=".255" ixy="0.0" ixz="0.0" iyy=".255" iyz="0.0" izz=".42632"/>
    </inertial>
  </link>

  <joint name="base_to_frw" type="continuous">
    <axis xyz= "0 1 0" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="frw"/>
    <origin xyz="-.6078 .6237 .2919" rpy="0 0 0"/>
  </joint>

  <link name="blw">
    <visual>
      <origin xyz="-1.39 .615 .0601" rpy="0 0 0"/>
      <geometry>
        <mesh scale="0.001 0.001 0.001" filename="package://utv_description/meshes/UTV_BLW.stl"/>
      </geometry>
      <material name="black"/>
    </visual>
    <inertial>
      <mass value="10"/>
      <inertia ixx=".255" ixy="0.0" ixz="0.0" iyy=".255" iyz="0.0" izz=".42632"/>
    </inertial>
  </link>

  <joint name="base_to_blw" type="continuous">
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="blw"/>
    <origin xyz="1.39 -.615 .2919" rpy="0 0 0"/>
  </joint>

  <link name="brw">
    <visual>
      <origin xyz="-1.39 -.615 .0601" rpy="0 0 0"/>
      <geometry>
        <mesh scale="0.001 0.001 0.001" filename="package://utv_description/meshes/UTV_BRW.stl"/>
      </geometry>
      <material name="black"/>
    </visual>
    <inertial>
      <mass value="10"/>
      <inertia ixx=".255" ixy="0.0" ixz="0.0" iyy=".255" iyz="0.0" izz=".42632"/>
    </inertial>
  </link>

  <joint name="base_to_brw" type="continuous">
    <axis xyz="0 1 0"  rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="brw"/>
    <origin xyz="1.39 .615 .2919" rpy="0 0 0"/>
  </joint>
  <!--<gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/</robotNamespace>
    </plugin>
  </gazebo>-->
</robot>
